- page_header "New Post"
- breadcrumbize link_to(@topic.forum.name, @topic.forum), link_to(truncate(@topic.title, separator: " "), [@topic.forum, @topic])
 
= form_for [@topic, @post], html: {class: "form-post"} do |f|

  - if @post.errors.any? 
    .alert.alert-error
      #error_explanation
        %h2
          = pluralize(@post.errors.count, "error") 
          prohibited this post from being saved:
        %ul
          - @post.errors.full_messages.each do |msg|
            %li= msg 

  = render partial: "form", locals: {f: f}
  .form-actions
    = f.submit class: %[btn btn-primary]
  
