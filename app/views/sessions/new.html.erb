<% content_for :page_header, "Sign Up" %>
<%= form_tag sessions_path do %>
  <div class="clearfix">
  <%= label_tag :username %>
  <%= text_field_tag :username, params[:username] %>
  </div>

  <div class="clearfix">
  <%= label_tag :password %>
  <%= text_field_tag :password, params[:password] %>
  </div>


  <div class="clearfix">
  <%= check_box_tag :remember_me, 1, params[:remember_me] %>
  <%= label_tag :remember_me %>
  </div>


  <div class="actions">
    <%= submit_tag "Sign In", class: "btn primary" %>
    <%= cancel_button %>
  </div>
<% end %>
